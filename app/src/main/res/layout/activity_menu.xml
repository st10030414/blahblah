<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".mainMenu"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Menu"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:shadowColor="@color/dark_gold"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"/>
            <!--(Geeks For Geeks, 2025)-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recent Purchases"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:shadowColor="@color/dark_gold"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:textSize="25sp"/>
            <!--(Geeks For Geeks, 2025)-->

            <Button
                android:id="@+id/expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textColor="@color/black"
                android:backgroundTint="@color/gold"
                android:layout_gravity="end"/>
            <!--(Android, 2025)-->
        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:alpha="0.8"
                android:layout_gravity="end"
                android:id="@+id/purch1"/>
            <!--(Geeks For Geeks, 2025)-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:alpha="0.8"
                android:layout_gravity="end"
                android:id="@+id/purch2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:alpha="0.8"
                android:layout_gravity="end"
                android:id="@+id/purch3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Income"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:shadowColor="@color/dark_gold"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="3"
                    android:textSize="25sp"/>
                <!--(Geeks For Geeks, 2025)-->

                <Button
                    android:id="@+id/income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/gold"
                    android:layout_gravity="end"/>
                <!--(Android, 2025)-->
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:alpha="0.8"
                android:layout_gravity="end"
                android:id="@+id/income1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:alpha="0.8"
                android:layout_gravity="end"
                android:id="@+id/income2"/>
            <!--(Geeks For Geeks, 2025)-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:alpha="0.8"
                android:layout_gravity="end"
                android:id="@+id/income3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Goals"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:shadowColor="@color/dark_gold"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="3"
                    android:textSize="25sp"/>
                <!--(Android, 2025)-->

                <Button
                    android:id="@+id/goals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/gold"
                    android:layout_gravity="end"/>
                <!--(Android, 2025)-->

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:alpha="0.8"
                android:layout_gravity="end"
                android:id="@+id/goal1"/>
            <!--(Geeks For Geeks, 2025)-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:alpha="0.8"
                android:layout_gravity="end"
                android:id="@+id/goal2"/>
            <!--(Android, 2025)-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:alpha="0.8"
                android:layout_gravity="end"
                android:id="@+id/goal3"/>
            <!--(Geeks For Geeks, 2025)-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Targets"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:shadowColor="@color/dark_gold"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="3"
                    android:textSize="25sp"/>
                <!--(Android, 2025)-->

                <Button
                    android:id="@+id/targets"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/gold"
                    android:layout_gravity="end"/>
                <!--(Android, 2025)-->

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:alpha="0.8"
                android:layout_gravity="end"
                android:id="@+id/tar1"/>
            <!--(Geeks For Geeks, 2025)-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:alpha="0.8"
                android:layout_gravity="end"
                android:id="@+id/tar2"/>
            <!--(Android, 2025)-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:alpha="0.8"
                android:layout_gravity="end"
                android:id="@+id/tar3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp">

                <Button
                    android:id="@+id/stats"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/gold"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:elevation="4dp"

                    android:text="View Statistics"/>



            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>