<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gold"
    android:elevation="4dp"
    android:padding="16dp"
    tools:context=".EntryIncome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Income Entry"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:shadowColor="@color/dark_gold"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="3"
                android:paddingBottom="16dp"
                android:textSize="40sp"/>
            <!--(Geeks For Geeks, 2025)-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginEnd="60dp"/>
                <!--(Geeks For Geeks, 2025)-->

                <EditText
                    android:id="@+id/incName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gold"
                    android:backgroundTint="@color/gold"
                    android:hint="Salary Bonus"
                    android:minHeight="48dp"/>
                <!--(Android, 2025)-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp">
                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Price"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginEnd="60dp"/>
                <!--(Geeks For Geeks, 2025)-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/incCost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gold"
                    android:backgroundTint="@color/gold"
                    android:hint="4000"
                    android:inputType="number"
                    android:minHeight="48dp"/>
                <!--(Android, 2025)-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Day"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginEnd="60dp"/>
                <!--(Geeks For Geeks, 2025)-->

                <EditText
                    android:id="@+id/incDay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gold"
                    android:backgroundTint="@color/gold"
                    android:hint="dd"
                    android:inputType="number"
                    android:minHeight="48dp"/>
                <!--(Android, 2025)-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Month"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginEnd="60dp"/>
                <!--(Geeks For Geeks, 2025)-->

                <EditText
                    android:id="@+id/incMonth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gold"
                    android:backgroundTint="@color/gold"
                    android:inputType="number"
                    android:hint="mm"
                    android:minHeight="48dp"/>
                <!--(Android, 2025)-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Year"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginEnd="60dp"/>
                <!--(Geeks For Geeks, 2025)-->

                <EditText
                    android:id="@+id/incYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gold"
                    android:backgroundTint="@color/gold"
                    android:inputType="number"
                    android:hint="yyyy"
                    android:minHeight="48dp"/>
                <!--(Android, 2025)-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Description"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginEnd="60dp"/>
                <!--(Geeks For Geeks, 2025)-->

                <EditText
                    android:id="@+id/incDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gold"
                    android:backgroundTint="@color/gold"
                    android:hint="Accomodation payment"
                    android:minHeight="48dp"/>
                <!--(Android, 2025)-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Category"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginEnd="60dp"/>
                <!--(Geeks For Geeks, 2025)-->

                <EditText
                    android:id="@+id/incCate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/light_gold"
                    android:backgroundTint="@color/gold"
                    android:hint="Housing"
                    android:minHeight="48dp"/>
                <!--(Android, 2025)-->

            </LinearLayout>

            <Button
                android:id="@+id/addIncome"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="@color/gold"
                android:text="Add Entry"/>

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="@color/dark_gold"
                android:text="Cancel"/>
            <!--(Android, 2025)-->






        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>